{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": ["plugin:react/recommended", "google"],
    "overrides": [
      {
        "files": ["src/*.js"], // Use a wildcard pattern to match all JavaScript files in the "src" directory
        "rules": {
          "react/react-in-jsx-scope": "off",
          "require-jsdoc": "off"
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {}
  }
  